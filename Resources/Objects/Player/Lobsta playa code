                        pygame.image.load("objects/player/briansteelup3.PNG")]
        
       self.downImages = [pygame.image.load("objects/player/briansteeldown1.PNG"),
                          pygame.image.load("objects/player/briansteeldown2.PNG"),
                          pygame.image.load("objects/player/briansteeldown3.PNG")]
        
       self.leftImages = [pygame.image.load("objects/player/briansteelleft1.PNG"),
                          pygame.image.load("objects/player/briansteelleft2.PNG"),
                          pygame.image.load("objects/player/briansteelleft3.PNG")]

       self.rightImages = [pygame.image.load("objects/player/briansteelright1.PNG"),
                           pygame.image.load("objects/player/briansteelright2.PNG"),
                           pygame.image.load("objects/player/briansteelright3.PNG")]
        
       
